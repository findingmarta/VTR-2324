<?xml version="1.0" ?>
<materialLib name="NPR">
        <shaders>
                <shader name="sobel" vs="sobel.vert" ps="sobel.frag" />
        </shaders>

        <textures>
                <texture name="teapot" filename="../textures/teapot.jpg"  mipmap="true"/>
        </textures>

        <materials>

		<material name="sobel">
			<shader name="sobel">
				<values>
					<valueof uniform="m_pvm" type="RENDERER" context="CURRENT" 
                                                component="PROJECTION_VIEW_MODEL" />

					<valueof uniform="teapot" type="TEXTURE_BINDING"
							component="UNIT" id="1" />
				</values>
			</shader>
			<textures>
				<texture name="teapot" UNIT="1"/>
			</textures>
		</material>
        </materials>
</materialLib>