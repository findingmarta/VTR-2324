<?xml version="1.0" ?>
<project name="Non-Photorealistic Rendering" width="1920" height="2080">
	<assets>
	
	    <!-- <attributes>
            <attribute name="num_divisions" type="RENDERER" data="INT" value="4" />
		</attributes> -->

		<scenes>
			<scene name="teapot" param="SWAP_YZ UNITIZE">
				<file name="models/teapot.3ds"/>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" /> <!-- white window when launched -->
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV="60.0" NEAR="0.3" FAR="100.0" />
				<POSITION x="0" y="16.45" z="10" />
                <LOOK_AT_POINT x = "0" y="0" z="0" />
				<VIEW x="0.289735" y="-0.889418" z="-0.874304" />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun" type="directional">
				<DIRECTION x="0" y="-1.5" z="0" />
				<COLOR r="0.9" g="0.9" b="0.9" />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename = "project.mlib"/>
		</materialLibs> 

	</assets>
	
	<pipelines>
		<pipeline name="NPR" default="true">
			<pass class="default" name="toonPass">
				<scenes>
					<scene name ="teapot" />  
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>

                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromLibrary="NPR" fromMaterial="toon" />
                    </map>
                </injectionMaps>
			</pass>


			<pass class="default" name="hatchPass">
				<scenes>
					<scene name ="teapot" />  
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>

                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromLibrary="NPR" fromMaterial="hatch" />
                    </map>
                </injectionMaps>
			</pass>
			
		</pipeline>
	</pipelines>

